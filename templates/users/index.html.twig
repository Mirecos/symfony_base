{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | {% trans %}Users{% endtrans %}{% endblock %}

{% block body %}

    <table style="width:70%;background-color:#222222;border-radius:1%;margin:auto;margin-top:2%;padding:4%;">
        <thead>
            <tr>
                <th>ID</th>
                <th>Email</th>
                <th>Liked</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
            <tr>
                <td>{{user.id}}</td>
                <td>{{user.email}}</td>
                <td>
                    {% for album in user.liked %}
                        {{album.name}} /
                    {% endfor %}
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
