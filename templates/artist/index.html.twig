{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	|
	{% trans %}Artist{% endtrans %}
{% endblock %}

{% block body %}
	{% if app.user %}
		{% if (is_granted('ROLE_ADMIN')) %}
			<a href="{{ path('app_artist_creation') }}" style="font-size: 220%;">{% trans %}Add.an.Artist{% endtrans %}</a>
		{% endif %}
	{% else %}
			<p>Seul les admins peuvent ajouter des artists</p>
	{% endif %}
	<div class="d-flex flex-row flex-wrap m-4" style="justify-content: space-evenly;">
		{% for artist in artists %}
			<div class="card text-dark" style="width:15%; margin-bottom:12px;background-color:#222222;">
				<div class="card-body">
                    <h3 style="color:gray;">{% trans %}Artist{% endtrans %} - {{ artist.id }}</h3>
                    <h3 style="color:white;">{{ artist.name }}</h3>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
