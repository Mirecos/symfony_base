<!DOCTYPE html>

<style>
    .customNavbar {background: #1DB954; color: black;}
    .link { color: black; text-decoration: none; }
</style>    
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body class=" text-light"style="background: black;">
        {% block nav %}
            <nav class="navbar navbar-expand-lg customNavbar" style="font-size:120%">
                <a class="navbar-brand link" href="{{ path('app_home') }}" style="width:3%;height:3%;"><img src="{{asset("assets/accueil.png")}}" style="width:100%;height:100%;margin-right:0;"></a>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link link" href="{{ path('app_album') }}">Albums</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link link" href="{{ path('app_artist') }}">Artists</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link link" href="{{ path('app_music') }}">Musics</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link link" href="{{ path('app_fan') }}">Fans</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link link" href="{{ path('app_cover') }}">Cover</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link link" href="{{ path('app_style') }}">Styles</a>
                    </li>
                </ul>
                <ul style="margin-left:auto;" class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link link" href="{{ path('app_users') }}">Users (admin-only)</a>
                    </li>

                    {% if app.user != null %}
                        <li>
                            <a class="nav-link link" href="{{ path('app_logout') }}">Logout</a>
                        </li>
                    {% else %}
                    <li  class="nav-item">
                        <a class="nav-link link" href="{{ path('app_security') }}">Connect</a>
                    <li>
                    {% endif %}
                </ul>
                </div>
            </nav>
        {% endblock %}
        {% block body %}{% endblock %}
    </body>
</html>
